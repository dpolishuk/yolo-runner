{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://yolo-runner.github.io/schemas/agent-backend.schema.json",
  "$defs": {
    "agent_capabilities": {
      "type": "object",
      "required": ["languages", "features"],
      "properties": {
        "languages": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "features": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "enum": ["implement", "review", "stream", "larger_model", "rewrite_task", "service_proxy"]
          }
        }
      },
      "additionalProperties": false
    },
    "agent_config": {
      "type": "object",
      "required": ["timeout"],
      "properties": {
        "api_key_env": {
          "type": "string",
          "minLength": 1
        },
        "timeout": {
          "type": "string",
          "minLength": 1
        },
        "binary": {
          "type": "string",
          "minLength": 1
        },
        "args": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "command": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": true
    },
    "health_check": {
      "type": "object",
      "required": ["enabled"],
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "endpoint": {
          "type": "string",
          "minLength": 1
        },
        "command": {
          "type": "string",
          "minLength": 1
        },
        "method": {
          "type": "string",
          "minLength": 1
        },
        "headers": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "timeout": {
          "type": "string",
          "minLength": 1
        },
        "interval": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": true
    },
    "agent_backend": {
      "type": "object",
      "required": ["name", "type", "backend", "model", "capabilities", "config"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "type": {
          "type": "string",
          "enum": ["command", "opencode", "codex", "claude", "kimi", "gemini"]
        },
        "backend": {
          "type": "string",
          "minLength": 1
        },
        "model": {
          "type": "string",
          "minLength": 1
        },
        "capabilities": {
          "$ref": "#/$defs/agent_capabilities"
        },
        "config": {
          "$ref": "#/$defs/agent_config"
        },
        "health": {
          "$ref": "#/$defs/health_check"
        },
        "adapter": {
          "type": "string",
          "minLength": 1
        },
        "binary": {
          "type": "string",
          "minLength": 1
        },
        "command": {
          "type": "string",
          "minLength": 1
        },
        "supports_review": {
          "type": "boolean"
        },
        "supports_stream": {
          "type": "boolean"
        },
        "distributed_capabilities": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "supported_models": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "required_credentials": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "type": {
                "const": "command"
              }
            }
          },
          "then": {
            "required": ["adapter"],
            "properties": {
              "adapter": {
                "const": "command"
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "not": {
                  "const": "command"
                }
              }
            }
          },
          "then": {
            "properties": {
              "adapter": {
                "not": {
                  "enum": ["command"]
                }
              }
            }
          }
        }
      ],
      "additionalProperties": true
    }
  },
  "type": "array",
  "items": {
    "$ref": "#/$defs/agent_backend"
  }
}
